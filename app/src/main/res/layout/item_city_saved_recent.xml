<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="12dp"
    android:paddingVertical="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_8_seattle10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img"
        tools:src="@drawable/ic_bxs_briefcase"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name_tv"
        android:text="Home"
        android:layout_marginStart="8dp"
        android:textColor="@color/brand_main_on_primary"
        style="@style/txt_display_medium_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="gone"
        app:tint="@color/seattle_120"
        android:id="@+id/add_icon"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_add_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>